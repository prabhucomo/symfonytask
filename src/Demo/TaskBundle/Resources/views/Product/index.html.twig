{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Product list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Itenname</th>
                <th>Costprice</th>
                <th>Unitprice</th>
                <th>Promoprice</th>
                <th>Location</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('demo_task_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.itenname }}</td>
                <td>{{ entity.costprice }}</td>
                <td>{{ entity.unitprice }}</td>
                <td>{{ entity.promoprice }}</td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.quantity }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('demo_task_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('demo_task_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('demo_task_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
